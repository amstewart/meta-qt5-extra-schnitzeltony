     QTreeWidgetItem *header = new QTreeWidgetItem();
@@ -970,6 +977,7 @@ bool GetInfo_OpenGL(QTreeWidget *treeWidget)
 
     l1 = new QTreeWidgetItem(treeWidget);
 
+#if HAVE_X11
     if (isX11) {
         char *displayName = nullptr;
